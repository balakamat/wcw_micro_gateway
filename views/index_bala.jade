		script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-resource.min.js')
		script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-cookies.min.js')
		script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-sanitize.js')
		script(src='bower_components/d3/d3.js')
		script(src='bower_components/nvd3/nv.d3.js')
		script(src='bower_components/angularjs-nvd3-directives/dist/angularjs-nvd3-directives.js')
		script(src='//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
		script(src='http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false')
		script(src='//code.jquery.com/jquery-1.7.1.js')
